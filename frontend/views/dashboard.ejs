    const sampleLocations = [
      { lat: 12.9716, lng: 77.5946, name: "Bangalore Central", type: "station", icon: "üöâ", color: "#3b82f6" },
      { lat: 12.9698, lng: 77.6000, name: "MG Road", type: "stop", icon: "üöè", color: "#10b981" },
      { lat: 12.9800, lng: 77.5900, name: "Cubbon Park", type: "landmark", icon: "üå≥", color: "#8b5cf6" },
      { lat: 12.9650, lng: 77.6050, name: "Brigade Road", type: "stop", icon: "üöè", color: "#10b981" },
      { lat: 12.9750, lng: 77.5850, name: "Vidhana Soudha", type: "landmark", icon: "üèõÔ∏è", color: "#8b5cf6" }
    ];

    sampleLocations.forEach((location, index) => {
      setTimeout(() => {
        const marker = L.marker([location.lat, location.lng], { 
